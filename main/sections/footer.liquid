{% comment %} Disable UndefinedObject theme check {% endcomment %}

<!-- Footer Section -->
<footer class="footer color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank
      assign has_social_icons = false
    endif

    if settings.brand_image == blank and settings.brand_headline == blank and settings.brand_description == blank
      assign brand_empty = true
    endif

    if section.blocks.size == 1 and section.blocks[0].type == 'brand_information' and brand_empty and has_social_icons == false and section.settings.newsletter_enable == false and section.settings.enable_follow_on_shop == false
      assign only_empty_brand = true
    endif
  -%}

  <!-- Footer Content Wrapper -->
  <div class="footer-content-wrapper">
    <!-- Footer Top Section -->
    <div class="footer-top">
      <div class="footer-content">
        <div class="footer-layout">
          <!-- Footer Links -->
          <div class="footer-links">
            <!-- Column 1: About Us -->
            <div class="footer-column">
              <h3 class="footer-heading">About Us</h3>
              <ul class="footer-link-list">
                <li><a href="/our-business">Our Business</a></li>
                {%- if section.settings.show_policy -%}
                  <ul class="footer-link-list">
                    {%- for policy in shop.policies -%}
                      {%- if policy != blank -%}
                        <li>
                          <a href="{{ policy.url }}">{{ policy.title | escape }}</a>
                        </li>
                      {%- endif -%}
                    {%- endfor -%}
                  </ul>
              {%- endif -%}
              </ul>
            </div>

            <!-- Column 2: Help Center -->
            <div class="footer-column">
              <h3 class="footer-heading">Help Center</h3>
              <ul class="footer-link-list">
                <li><a href="/contact-us">Contact Us</a></li>
                <li><a href="/faq">FAQ</a></li>
                <li><a href="/order-status">Order Status</a></li>
                <li><a href="/returns">Returns</a></li>
                <li><a href="/shipping-policy">Shipping Policy</a></li>
              </ul>
            </div>


            <!-- Column 4: Subscribe -->
            <div class="footer-column">
              <h3 class="footer-heading">Subscribe</h3>

              <!-- Newsletter Subscription Section -->
              {%- if section.settings.newsletter_enable -%}
                <div class="footer-block__newsletter">
                  {%- if section.settings.newsletter_heading != blank -%}
                    <h3 class="footer-block__heading">{{ section.settings.newsletter_heading }}</h3>
                  {%- endif -%}
                  {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
                    <div class="newsletter-form__field-wrapper">
                      <input
                        type="email"
                        name="contact[email]"
                        class="field__input"
                        placeholder="Your email address"
                        required
                      >
                      <button type="submit" class="newsletter-form__button">Subscribe</button>
                    </div>
                  {%- endform -%}
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Separator Line -->
    <div class="footer-separator"></div>

    <!-- Footer Bottom Section -->
    <div class="footer-bottom">
      <div class="footer-bottom__content">
        <div class="footer__bottom-wrapper">
          <!-- Left Division: Date and Policies -->
          <div class="footer__left">
            <div class="footer__copyright">
              <small
                >&copy; {{ 'now' | date: '%Y' }}
                {{ shop.name }}.co 
              </small>
            </div>
          </div>

          <!-- Right Division: Social Icons (Optional) -->
          {%- if section.settings.show_social and has_social_icons -%}
            <div class="footer__right">
              {%- render 'social-icons', class: 'footer__list-social' -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
  <!-- End of Footer Content Wrapper -->
</footer>

{%- style -%}
/* General Footer Styles */
.footer {
  background-color: #111; /* Darker background for better contrast */
  color: #fff;
  font-family: Arial, sans-serif;
}

/* Footer Content Wrapper */
.footer-content-wrapper {
  max-width: 1200px; /* Set a max-width to align content */
  margin: 0 auto; /* Center the content */
  padding: 0 20px; /* Add horizontal padding */
}

/* Footer Top Section */
.footer-top {
  padding: 40px 0;
  border-bottom: 1px solid #333;
}

.footer-content {
  display: flex;
  flex-direction: column;
}

.footer-layout {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
}

.footer-links {
  display: flex;
  flex-wrap: wrap;
  gap: 30px;
  flex: 1 1 70%; /* Takes up 70% of the width */
}

.footer-column {
  flex: 1 1 calc(25% - 30px);
  min-width: 150px;
}

.footer-heading {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 12px;
  color: #fff;
}

.footer-link-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-link-list li {
  padding: 6px 0;
  font-size: 14px;
  color: #ccc;
}

.footer-link-list li a {
  color: #ccc;
  text-decoration: none;
  transition: color 0.3s;
}

.footer-link-list li a:hover {
  color: #fff;
}

/* Dot Separators Between Policy Items */
.footer__policies .policies {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.footer__policies .policies li {
  display: flex;
  align-items: center;
}

.footer__policies .policies li:not(:last-child)::after {
  content: "â€¢";
  color: #ccc;
  margin-left: 10px;
  margin-right: 10px;
}

/* Newsletter Form Styles */
.footer-block__newsletter {
  flex: 0 0 25%; /* Takes up 25% of the width */
  padding: 20px;
  background-color: #222;
  border-radius: 6px;
  margin-top: 0; /* Remove top margin to align vertically */
  text-align: right; /* Right-align the content within the newsletter section */
}

.footer-block__heading {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 12px;
  color: #fff;
}

.newsletter-form__field-wrapper {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.field__input {
  padding: 10px 12px;
  border: 1px solid #555;
  background-color: #333;
  color: #fff;
  border-radius: 4px;
  flex: 1 1 auto;
  min-width: 200px;
  font-size: 14px;
}

.newsletter-form__button {
  padding: 10px 20px;
  background-color: #ff6600; /* Highlighted button color */
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-size: 14px;
  transition: background-color 0.3s;
}

.newsletter-form__button:hover {
  background-color: #e65c00;
}

/* Separator Line */
.footer-separator {
  border-top: 1px solid #333;
  margin: 40px auto 20px auto; /* Top margin to separate from footer-top */
  width: 100%;
}

/* Footer Bottom Section */
.footer-bottom {
  padding: 20px 0;
}

.footer-bottom__content {
  display: flex;
  justify-content: center;
}

.footer__bottom-wrapper {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
}

/* Left Division: Date and Policies */
.footer__left {
  display: flex;
  align-items: center;
  gap: 20px;
  flex-wrap: wrap;
}

.footer__copyright {
  font-size: 14px;
  color: #ccc;
}

/* Social Icons Container */
.footer__list-social {
  display: flex;
  gap: 10px;
  margin-top: 10px; /* Adds spacing above the icons */
}

/* Social Icons Styling */
.footer__list-social a {
  color: #ccc;
  font-size: 18px;
  transition: color 0.3s;
}

.footer__list-social a:hover {
  color: #fff;
}

/* Responsive Styles */
@media screen and (max-width: 992px) {
  .footer-layout {
    flex-direction: column;
    align-items: flex-start;
    gap: 30px;
  }

  .footer-links {
    flex: 1 1 100%;
    gap: 20px;
  }

  .footer-block__newsletter {
    flex: 1 1 100%;
    margin-top: 20px;
    text-align: left; /* Align text to left on smaller screens */
  }

  .footer__bottom-wrapper {
    flex-direction: column;
    align-items: flex-start;
  }

  .footer__left {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }
}

@media screen and (max-width: 576px) {
  .newsletter-form__field-wrapper {
    flex-direction: column;
    align-items: stretch;
  }

  .newsletter-form__button {
    width: 100%;
  }

  .footer__bottom-wrapper {
    align-items: flex-start;
  }

  .policies {
    flex-direction: column;
    gap: 10px;
  }

  .footer__left {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }
}
{%- endstyle -%}

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "header",
      "content": "Footer Appearance"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Newsletter Settings",
      "info": "Configure newsletter signup."
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "Enable Newsletter"
    },
    {
      "type": "inline_richtext",
      "id": "newsletter_heading",
      "default": "Subscribe to Our Newsletter",
      "label": "Newsletter Heading"
    },
    {
      "type": "header",
      "content": "Social Media Settings",
      "info": "Manage social media icons."
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "default": true,
      "label": "Show Social Icons"
    },
    {
      "type": "header",
      "content": "Policies",
      "info": "Display store policies."
    },
    {
      "type": "checkbox",
      "id": "show_policy",
      "default": true,
      "label": "Show Policies"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    }
  ]
}
{% endschema %}
